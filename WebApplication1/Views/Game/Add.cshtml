@model GameModel

@{
    ViewData["Title"] = "Add Game to Library";
}

@using (Html.BeginForm("Add", "Game", FormMethod.Post))
{
    <label>Game title: @Html.TextBoxFor(m => m.Name)</label>

    <br />
    <label>Enter game description: @Html.TextBoxFor(m => m.Description)</label>

    <br />
    <label>Provide vignette link: @Html.TextBoxFor(m => m.ImageLink)</label>

    <br />

    <button id="Submit" type="submit" class="btn btn-primary">Submit</button>
}